<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_user_profile_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_profile_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/user_profile_title"
        android:textAlignment="center"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/user_email_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:hint="@string/user_profile_email"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp" />

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/user_profile_name_user_name" />

    <EditText
        android:id="@+id/edit_user_mobile_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/user_profile_mobile_number"
        android:inputType="number"
        android:maxLength="10" />

    <Spinner
        android:id="@+id/spinner_sex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/sex_type_list"
        android:prompt="@string/sex_type" />

    <Spinner
        android:id="@+id/spinner_profession"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:entries="@array/profession_type_list"
        android:prompt="@string/profession_type" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="@string/user_profile_address" />

    <ImageView
        android:id="@+id/poweredBy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@string/powered_by_google_text"
        android:src="@drawable/powered_by_google_light"
        android:textAlignment="textEnd" />

    <Button
        android:id="@+id/send_user_profile_response"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_edit_user_profile"
        android:textAlignment="center" />
</LinearLayout>